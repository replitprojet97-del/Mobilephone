modules = ["web", "nodejs-20", "php-8.2", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["xcodebuild", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36187
externalPort = 3001

[[ports]]
localPort = 41975
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server.js"]
